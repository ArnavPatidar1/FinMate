<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog_bg">

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Saving to Goal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DecoView progress ring with icon -->
    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <!-- Circular progress bar -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicatorSize="200dp"
            app:trackThickness="16dp"
            app:trackColor="@color/gray"
            app:indicatorColor="@color/green"
            android:indeterminate="false"
            android:rotation="270"
            style="@style/Widget.Material3.CircularProgressIndicator" />

        <ImageView
            android:id="@+id/imgCategoryIcon"
            android:layout_width="@dimen/_92sdp"
            android:layout_height="@dimen/_92sdp"
            android:layout_gravity="center"
            android:src="@drawable/house_icon"
            android:background="@drawable/circle_background3"
            android:padding="@dimen/_11sdp"
            android:contentDescription="Category Icon" />
    </FrameLayout>

    <!-- Amount display -->
    <TextView
        android:id="@+id/txtSavedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹20,000"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_25sdp"/>

    <TextView
        android:id="@+id/txtRemainingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹12,000"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_25sdp"/>

    <!-- Goal name -->
    <TextView
        android:id="@+id/txtGoalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Purchase"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/txtRemainingAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Target total -->
    <TextView
        android:id="@+id/txtTotalTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target: ₹20,000"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/txtGoalName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="2dp"/>

    <!-- Enter amount -->
    <EditText
        android:id="@+id/edtNewSaving"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Enter saving amount"
        android:inputType="numberDecimal"
        android:background="@drawable/custom_edit_text2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTotalTarget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button -->
    <Button
        android:id="@+id/btnAddSaving"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Saving"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toBottomOf="@id/edtNewSaving"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
