<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:elevation="@dimen/_7sdp"
            app:cardBackgroundColor="#0EC6DC"
            app:cardCornerRadius="@dimen/_10ssp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent
">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="@string/total_bal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/totalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:text="₹25000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"

                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/monthly_expense"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/CustomProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:max="100"
                    android:progress="50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="₹10000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/progressMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_170sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="₹20000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/next_icon"
                android:rotation="180"
                android:id="@+id/previousDate"
                android:layout_weight="1"
                android:contentDescription="@string/go_to_previous_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/currentDate"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/next_icon"
                android:id="@+id/nextDate"
                android:contentDescription="@string/go_to_next_date"
                android:layout_weight="1"/>

        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateLayout"
            app:layout_constraintBottom_toTopOf="@+id/recyclerExpense"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:tabTextColor="@color/black"
            >
            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/daily"
                android:id="@+id/daily"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weekly"
                android:id="@+id/weekly"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monthly"
                android:id="@+id/monthly"/>

        </com.google.android.material.tabs.TabLayout>

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/txtTask"-->
        <!--            android:text="@string/recent_spent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/cardView"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/cardView"-->
        <!--            android:layout_marginTop="@dimen/_10sdp"-->
        <!--            android:textStyle="bold"-->
        <!--            android:textSize="@dimen/_14ssp"/>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerExpense"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"
            app:layout_constraintStart_toStartOf="@+id/tabLayout"
            app:layout_constraintEnd_toEndOf="@+id/tabLayout"
            tools:listitem="@layout/display_transaction_row" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>