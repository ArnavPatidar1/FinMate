            <solid android:color="#00E4FF" />
            <corners android:radius="12dp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/black" />
            <padding android:bottom="@dimen/_10sdp" android:left="@dimen/_10sdp" android:right="@dimen/_10sdp" android:top="@dimen/_10sdp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
